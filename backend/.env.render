# Render-specific environment settings
NODE_ENV=production

# Extra-long timeouts for Neon PostgreSQL on Render
PRISMA_QUERY_ENGINE_LIBRARY_ADVISORY_LOCK_TIMEOUT=180000
PRISMA_MIGRATION_ADVISORY_LOCK_TIMEOUT=180000
PRISMA_CLIENT_ENGINE_LIBRARY_ADVISORY_LOCK_TIMEOUT=180000
PRISMA_ENGINE_PROTOCOL=binary

# NPM settings for Render
NPM_CONFIG_FETCH_RETRIES=5
NPM_CONFIG_FETCH_RETRY_MINTIMEOUT=20000
NPM_CONFIG_FETCH_RETRY_MAXTIMEOUT=120000
