generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  // Use binary protocol for better performance with Neon
  engineType = "binary"
  // Skip migrations for initial deploy
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  // Use direct URL for more reliable connections
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}
